<script>
// Animated hero headline
const heroPhrases = [
  "Trade Smarter, Not Harder"
];
let heroPhraseIndex = 0, heroCharIndex = 0, heroIsDeleting = false;
const heroEl = document.querySelector('.animated-hero');
function heroType() {
  if (!heroEl) return;
  const current = heroPhrases[heroPhraseIndex];
  if (heroIsDeleting) {
    heroEl.textContent = current.substring(0, heroCharIndex--);
    if (heroCharIndex < 0) {
      heroIsDeleting = false;
      setTimeout(heroType, 600);
    } else {
      setTimeout(heroType, 40);
    }
  } else {
    heroEl.textContent = current.substring(0, heroCharIndex++);
    if (heroCharIndex > current.length) {
      heroIsDeleting = true;
      setTimeout(heroType, 1800);
    } else {
      setTimeout(heroType, 70);
    }
  }
}
heroType();
</script>

